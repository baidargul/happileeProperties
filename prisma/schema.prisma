generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model builder {
  id          String  @id @default(uuid())
  userId      String  @unique  // This field will link the builder to the user, and it must be unique to enforce the one-to-one relation
  description String?
  gst         String?
  user        user    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user {
  id        String        @id @default(uuid())  // User will have its own unique ID
  email     String?       @unique
  address   String?
  phone     String?       @unique
  name      String
  password  String
  status    accountStatus @default(UNDEFINED)
  type      accountTypes  @default(UNDEFINED)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @default(now())
  image     image[]
  builder   builder?      // One-to-one relationship
}

model image {
  id     String @id(map: "images_pkey") @default(uuid())
  userId String
  url    String
  user   user   @relation(fields: [userId], references: [id], onDelete: Cascade, map: "images_userId_fkey")
}

enum accountStatus {
  UNDEFINED
  INCOMPLETE
  PENDING
  ACTIVE
  SUSPENDED
}

enum accountTypes {
  UNDEFINED
  BUYER
  BUILDER
  AGENT
  ADMIN
  SUPERADMIN
}

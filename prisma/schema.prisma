generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model builder {
  id          String  @id @default(uuid())
  userId      String
  description String?
  gst         String?
  user        user    @relation(fields: [userId], references: [id], onDelete: Cascade, map: "builder_userId_fkey")
}

model user {
  id       String        @id @default(uuid())
  email    String?       @unique
  address  String?
  phone    String?       @unique
  name     String
  password String
  type accountTypes @default(UNDEFINED)
  status   accountStatus @default(UNDEFINED)
  builder  builder[]
  image    image[]
}

model image {
  id     String @id(map: "images_pkey") @default(uuid())
  userId String
  url    String
  user   user   @relation(fields: [userId], references: [id], onDelete: Cascade, map: "images_userId_fkey")
}

enum accountStatus {
  UNDEFINED
  INCOMPLETE
  PENDING
  ACTIVE
  SUSPENDED
}

enum accountTypes {
  UNDEFINED
  BUYER
  BUILDER
  AGENT
  ADMIN
  SUPERADMIN
}
